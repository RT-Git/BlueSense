<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.ravitripathi.bluesense.slipPerActivity">

    <TextView
        android:id="@+id/rA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/rB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rA"/>

    <TextView
        android:id="@+id/rC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rB" />

    <TextView
        android:id="@+id/rD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rC"/>

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="19dp"
        android:text="Start"
        android:layout_below="@+id/rD"
        android:layout_toLeftOf="@+id/stop"
        android:layout_toStartOf="@+id/stop" />

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp"
        android:layout_alignBaseline="@+id/start"
        android:layout_alignBottom="@+id/start"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stop"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A : " />

            <TextView
                android:id="@+id/As"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tA" />

            <TextView
                android:id="@+id/tB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tA"
                android:text="B : " />

            <TextView
                android:id="@+id/Bs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tB" />

            <TextView
                android:id="@+id/tC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tB"
                android:text="C : " />

            <TextView
                android:id="@+id/Cs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tC" />

            <TextView
                android:id="@+id/tD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tC"
                android:text="D : " />

            <TextView
                android:id="@+id/Ds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tD" />


            <EditText
                android:id="@+id/dist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tD"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:ems="10"
                android:hint="Enter Distance"
                android:inputType="number" />

            <Button
                android:id="@+id/calc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dist"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="19dp"
                android:text="Calculate" />


            <TextView
                android:id="@+id/slipA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/calc" />

            <TextView
                android:id="@+id/slipB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/slipA" />

            <TextView
                android:id="@+id/slipC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/slipB" />

            <TextView
                android:id="@+id/slipD"
                android:layout_width="wrap_content"
                android:layout_below="@id/slipC"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/SLIPRAT"
                android:layout_below="@id/slipD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/log"
                android:visibility="gone"
                android:layout_below="@id/SLIPRAT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log Data" />


        </RelativeLayout>


    </ScrollView>



</RelativeLayout>
